@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - GameHub</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        .auth-container { min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #0b1014 0%, #1a2332 100%); }
        .auth-card { max-width: 420px; width: 100%; background: rgba(15,20,23,0.95); border: 1px solid rgba(255,255,255,.08); border-radius: 12px; padding: 40px; box-shadow: 0 20px 60px rgba(0,0,0,.6); }
        .auth-logo { text-align: center; margin-bottom: 30px; }
        .auth-logo h1 { color: #66c0f4; font-size: 2rem; font-weight: 700; }
        .form-control-auth { background: #101318; border: 1px solid rgba(255,255,255,.1); color: #d1e8ff; padding: 12px; }
        .form-control-auth:focus { background: #0f1318; border-color: #66c0f4; color: #d1e8ff; }
        .btn-auth { background: linear-gradient(180deg,#66c0f4,#2a8db7); border: none; color: #06121a; padding: 12px; font-weight: 600; width: 100%; }
        .btn-auth:hover { filter: brightness(1.1); }
        .auth-link { color: #66c0f4; text-decoration: none; }
        .auth-link:hover { text-decoration: underline; }
    </style>
</head>
<body class="app-dark">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-logo">
                <h1>GameHub</h1>
                <p class="text-muted">Create your account</p>
            </div>

            @if (TempData["RegisterError"] != null) {
                <div class="alert alert-danger">@TempData["RegisterError"]</div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post)) {
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="fullName" class="form-control form-control-auth" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control form-control-auth" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control form-control-auth" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control form-control-auth" required />
                </div>
                <button type="submit" class="btn btn-auth mb-3">Create Account</button>
                <div class="text-center">
                    <p class="text-muted mb-0">Already have an account? <a href="@Url.Action("Login","Account")" class="auth-link">Sign In</a></p>
                </div>
            }
        </div>
    </div>
</body>
</html>