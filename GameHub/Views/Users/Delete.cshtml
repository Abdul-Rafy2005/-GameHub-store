@model GameHub.Models.User

@{
    ViewBag.Title = "Delete User";
}

<h2 class="text-danger"><i class="bi bi-trash"></i> Delete User</h2>
<p class="lead">Are you sure you want to permanently delete this user?</p>
<div class="alert alert-warning"><i class="bi bi-exclamation-triangle-fill"></i> This will also remove all of this user's transactions, library entries, and feedback. This action cannot be undone.</div>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.FullName</dd>
    <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">User Type</dt><dd class="col-sm-10">@Model.UserType</dd>
    <dt class="col-sm-2">Active</dt><dd class="col-sm-10">@(Model.IsActive == true ? "Yes" : "No")</dd>
    <dt class="col-sm-2">Joined</dt><dd class="col-sm-10">@(Model.JoinDate?.ToString("MMM dd, yyyy") ?? "N/A")</dd>
</dl>

@using (Html.BeginForm("Delete", "Users", new { id = Model.UserID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Confirm Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ms-2" })
}
