@model IEnumerable<GameHub.Models.Game>
@{
    ViewBag.Title = "Store";
    var isAuth = (Session["IsAuthenticated"] as bool?) ?? false;
    var isAdmin = ((Session["UserType"] as string) ?? "").Equals("Admin", StringComparison.OrdinalIgnoreCase);
    var userLibrary = ViewBag.UserLibrary as Dictionary<int, string> ?? new Dictionary<int, string>();
    var gameDiscounts = ViewBag.GameDiscounts as Dictionary<int, decimal> ?? new Dictionary<int, decimal>();
    var featuredGames = ViewBag.FeaturedGames as List<GameHub.Models.Game> ?? new List<GameHub.Models.Game>();
    var topSellerIds = ViewBag.TopSellerIds as List<int> ?? new List<int>();
    var newReleaseIds = ViewBag.NewReleaseIds as List<int> ?? new List<int>();
    
    // Check if any filters are active
    var hasFilters = !string.IsNullOrEmpty(ViewBag.SearchTerm as string) 
                  || (ViewBag.GenreFilter != null && ViewBag.GenreFilter > 0)
                  || (ViewBag.FreeOnly != null && ViewBag.FreeOnly == true)
                  || ViewBag.MinPrice != null
                  || ViewBag.MaxPrice != null;
    
    var showHero = !isAdmin && !hasFilters && featuredGames.Any();
}

@if (showHero)
{
    <!-- Hero Carousel Banner -->
    <div id="heroCarousel" class="carousel slide hero-carousel" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-indicators">
            @for (int i = 0; i < featuredGames.Count; i++)
            {
                <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (int i = 0; i < featuredGames.Count; i++)
            {
                var game = featuredGames[i];
                var hasDiscount = gameDiscounts.ContainsKey(game.GameID);
                var discountPercent = hasDiscount ? gameDiscounts[game.GameID] : 0;
                var discountedPrice = hasDiscount ? game.Price * (1 - discountPercent / 100) : game.Price;
                var status = userLibrary.ContainsKey(game.GameID) ? userLibrary[game.GameID] : "none";
                
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="hero-slide" style="background-image: linear-gradient(to right, rgba(0,0,0,0.95) 0%, rgba(0,0,0,0.7) 40%, rgba(0,0,0,0.3) 70%, transparent 100%), url('/Content/banners/@(game.GameID).jpg');">
                        <div class="hero-content">
                            <div class="hero-layout">
                                <!-- Left Side: Info -->
                                <div class="hero-text">
                                    @if (hasDiscount) { <div class="hero-special-badge"><i class="bi bi-fire"></i> SPECIAL OFFER</div> }
                                    @if (newReleaseIds.Contains(game.GameID)) { <div class="hero-new-badge"><i class="bi bi-stars"></i> NEW RELEASE</div> }
                                    <h1 class="hero-title">@game.Title</h1>
                                    <div class="hero-meta">
                                        <span class="hero-genre"><i class="bi bi-tag"></i> @(game.Genre1?.GenreName ?? "Adventure")</span>
                                        @if (game.Rating.HasValue && game.Rating > 0)
                                        {
                                            <span class="hero-rating"><i class="bi bi-star-fill"></i> @game.Rating.Value.ToString("0.0")</span>
                                        }
                                    </div>
                                    <p class="hero-description">@(game.Description?.Length > 200 ? game.Description.Substring(0, 200) + "..." : game.Description)</p>
                                    <div class="hero-pricing">
                                        @if (hasDiscount)
                                        {
                                            <div class="hero-discount-badge">-@discountPercent%</div>
                                            <div class="hero-prices">
                                                <span class="hero-original-price">$@game.Price</span>
                                                <span class="hero-final-price">$@discountedPrice.ToString("0.00")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="hero-price-single">$@game.Price</div>
                                        }
                                    </div>
                                    <div class="hero-actions">
                                        @if (status == "owned")
                                        {
                                            <a href="@Url.Action("Details", "Games", new { id = game.GameID })" class="btn-hero btn-hero-secondary"><i class="bi bi-check-circle"></i> Owned - View Details</a>
                                        }
                                        else if (status == "wishlist")
                                        {
                                            <a href="@Url.Action("Index", "UserLibraries")" class="btn-hero btn-hero-primary"><i class="bi bi-credit-card"></i> Buy Now</a>
                                            <a href="@Url.Action("Details", "Games", new { id = game.GameID })" class="btn-hero btn-hero-secondary">View Details</a>
                                        }
                                        else
                                        {
                                            if (isAuth)
                                            {
                                                using (Html.BeginForm("AddToLibrary", "Games", FormMethod.Post, new { @class = "d-inline hero-form" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    @Html.Hidden("gameId", game.GameID)
                                                    <button type="submit" class="btn-hero btn-hero-primary"><i class="bi bi-plus-circle"></i> Add to Wishlist</button>
                                                }
                                            }
                                            else
                                            {
                                                <button type="button" class="btn-hero btn-hero-primary" onclick="requireLogin()"><i class="bi bi-lock"></i> Add to Wishlist</button>
                                            }
                                            <a href="@Url.Action("Details", "Games", new { id = game.GameID })" class="btn-hero btn-hero-secondary">View Details</a>
                                        }
                                    </div>
                                </div>
                                
                                <!-- Right Side: Game Poster -->
                                <div class="hero-poster">
                                    <div class="hero-poster-frame">
                                        <img src="/Content/covers/@(game.GameID).jpg" alt="@game.Title" onerror="this.src='/Content/cover-placeholder.jpg'" class="hero-poster-img" />
                                        @if (hasDiscount)
                                        {
                                            <div class="hero-poster-discount">-@discountPercent%</div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </button>
    </div>
}
else if (isAdmin)
{
    <div class="hero-banner" style="background-image:url('/Content/hero-placeholder.jpg')">
        <div class="overlay">
            <h1 class="display-5">Game Management</h1>
            <p class="lead">Manage your game catalog</p>
            <a href="@Url.Action("Create","Games")" class="btn btn-accent btn-lg"><i class="bi bi-plus-circle"></i> Add New Game</a>
        </div>
    </div>
}
else if (hasFilters)
{
    <!-- Filtered View Header -->
    <div class="filtered-header">
        <div class="container-xl">
            <h2 class="filtered-title"><i class="bi bi-funnel"></i> Filtered Results</h2>
            <div class="active-filters">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <span class="filter-badge">Search: "@ViewBag.SearchTerm"</span>
                }
                @if (ViewBag.GenreFilter != null && ViewBag.GenreFilter > 0)
                {
                    var genres = ViewBag.GenresItems as IEnumerable<GameHub.Models.Genre> ?? new List<GameHub.Models.Genre>();
                    var selectedGenre = genres.FirstOrDefault(g => g.GenreID == ViewBag.GenreFilter);
                    if (selectedGenre != null)
                    {
                        <span class="filter-badge">Genre: @selectedGenre.GenreName</span>
                    }
                }
                @if (ViewBag.FreeOnly == true)
                {
                    <span class="filter-badge">Free Games Only</span>
                }
                @if (ViewBag.MinPrice != null || ViewBag.MaxPrice != null)
                {
                    <span class="filter-badge">
                        Price: 
                        @if (ViewBag.MinPrice != null) { <text>$@ViewBag.MinPrice</text> }
                        @if (ViewBag.MinPrice != null && ViewBag.MaxPrice != null) { <text> - </text> }
                        @if (ViewBag.MaxPrice != null) { <text>$@ViewBag.MaxPrice</text> }
                    </span>
                }
                <a href="@Url.Action("Index", "Games")" class="btn btn-sm btn-secondary ms-2"><i class="bi bi-x-circle"></i> Clear All Filters</a>
            </div>
        </div>
    </div>
}

<!-- Store Catalog Section -->
<div class="store-section">
    @if (Model == null || !Model.Any())
    {
        <div class="panel-dark text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h3 class="mt-3">No Games Available</h3>
            @if (hasFilters)
            {
                <p class="text-muted">No games match your current filters. Try adjusting your search criteria.</p>
                <a href="@Url.Action("Index","Games")" class="btn btn-accent mt-3"><i class="bi bi-x-circle"></i> Clear Filters</a>
            }
            else
            {
                <p class="text-muted">Check back later for new releases!</p>
                if (isAdmin)
                {
                    <a href="@Url.Action("Create","Games")" class="btn btn-accent mt-3"><i class="bi bi-plus-circle"></i> Add Your First Game</a>
                }
            }
        </div>
    }
    else
    {
        <div class="catalog-header">
            <h2 class="catalog-title"><i class="bi bi-grid"></i> @(hasFilters ? "Filtered Games" : "Browse Games")</h2>
            <div class="catalog-count">Showing @Model.Count() game@(Model.Count() != 1 ? "s" : "")</div>
        </div>

        <div class="games-grid-modern">
        @foreach (var game in Model)
        {
            var status = userLibrary.ContainsKey(game.GameID) ? userLibrary[game.GameID] : "none";
            var hasDiscount = gameDiscounts.ContainsKey(game.GameID);
            var discountPercent = hasDiscount ? gameDiscounts[game.GameID] : 0;
            var discountedPrice = hasDiscount ? game.Price * (1 - discountPercent / 100) : game.Price;
            var isTopSeller = topSellerIds.Contains(game.GameID);
            var isNewRelease = newReleaseIds.Contains(game.GameID);

            <div class="game-card-modern @(status == "owned" ? "owned-game" : "")" data-game-id="@game.GameID">
                <!-- Badges -->
                <div class="card-badges">
                    @if (hasDiscount) { <div class="badge-discount">-@discountPercent%</div> }
                    @if (isTopSeller) { <div class="badge-top-seller"><i class="bi bi-trophy-fill"></i> Top Seller</div> }
                    @if (isNewRelease) { <div class="badge-new"><i class="bi bi-stars"></i> New</div> }
                    @if (status == "owned") { <div class="badge-owned"><i class="bi bi-check-circle-fill"></i> Owned</div> }
                </div>
                
                <!-- Cover Image -->
                <div class="card-cover-wrapper">
                    <img src="/Content/covers/@(game.GameID).jpg" class="card-cover" alt="@game.Title" onerror="this.src='/Content/cover-placeholder.jpg'" />
                    <div class="card-hover-overlay">
                        <div class="hover-quick-info">
                            @if (game.Rating.HasValue && game.Rating > 0)
                            {
                                <div class="hover-rating"><i class="bi bi-star-fill"></i> @game.Rating.Value.ToString("0.0") / 5</div>
                            }
                            <div class="hover-genre">@(game.Genre1?.GenreName ?? "Adventure")</div>
                        </div>
                    </div>
                </div>
                
                <!-- Card Body -->
                <div class="card-body-modern">
                    <h3 class="card-title-modern">@game.Title</h3>
                    
                    <!-- Pricing -->
                    <div class="card-pricing">
                        @if (hasDiscount)
                        {
                            <div class="pricing-discount">
                                <span class="pricing-original">$@game.Price</span>
                                <span class="pricing-final">$@discountedPrice.ToString("0.00")</span>
                            </div>
                        }
                        else
                        {
                            <div class="pricing-single">$@game.Price</div>
                        }
                    </div>

                    <!-- Actions -->
                    <div class="card-actions-modern">
                        @if (isAdmin)
                        {
                            <a href="@Url.Action("Edit","Games", new { id = game.GameID })" class="btn-card btn-card-sm btn-card-warning"><i class="bi bi-pencil"></i></a>
                            <a href="@Url.Action("Details","Games", new { id = game.GameID })" class="btn-card btn-card-sm btn-card-secondary"><i class="bi bi-eye"></i></a>
                            <a href="@Url.Action("Delete","Games", new { id = game.GameID })" class="btn-card btn-card-sm btn-card-danger"><i class="bi bi-trash"></i></a>
                        }
                        else
                        {
                            if (status == "owned")
                            {
                                <a href="@Url.Action("Details","Games", new { id = game.GameID })" class="btn-card btn-card-full btn-card-owned"><i class="bi bi-check-circle"></i> Owned</a>
                            }
                            else if (status == "wishlist")
                            {
                                <a href="@Url.Action("Index","UserLibraries")" class="btn-card btn-card-full btn-card-primary"><i class="bi bi-credit-card"></i> Buy Now</a>
                            }
                            else
                            {
                                if (isAuth)
                                {
                                    using (Html.BeginForm("AddToLibrary", "Games", FormMethod.Post, new { @class = "w-100 library-form-modern" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("gameId", game.GameID)
                                        <button type="submit" class="btn-card btn-card-full btn-card-primary">
                                            <i class="bi bi-plus-circle"></i> Add to Wishlist
                                        </button>
                                    }
                                }
                                else
                                {
                                    <button type="button" class="btn-card btn-card-full btn-card-primary" onclick="requireLogin()">
                                        <i class="bi bi-lock"></i> Add to Wishlist
                                    </button>
                                }
                            }
                            <a href="@Url.Action("Details","Games", new { id = game.GameID })" class="btn-card btn-card-sm btn-card-secondary mt-2"><i class="bi bi-info-circle"></i> Details</a>
                        }
                    </div>
                </div>
            </div>
        }
        </div>
    }
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Hero form AJAX submission
    $('.hero-form').on('submit', function(e) {
        e.preventDefault();
        var form = $(this);
        var btn = form.find('button[type="submit"]');
        btn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Adding...');
        
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    btn.html('<i class="bi bi-check-circle"></i> Added to Wishlist');
                    showToast(response.message || 'Added to wishlist!', 'success');
                    setTimeout(function(){ location.reload(); }, 1500);
                } else {
                    showToast(response.message || 'Failed to add.', 'error');
                    btn.prop('disabled', false).html('<i class="bi bi-plus-circle"></i> Add to Wishlist');
                }
            },
            error: function() {
                showToast('Failed. Please try again.', 'error');
                btn.prop('disabled', false).html('<i class="bi bi-plus-circle"></i> Add to Wishlist');
            }
        });
    });

    // Card form AJAX submission
    $('.library-form-modern').on('submit', function(e) {
        e.preventDefault();
        var form = $(this);
        var btn = form.find('button[type="submit"]');
        btn.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Adding...');
        
        $.ajax({
            url: form.attr('action'),
            type: 'POST',
            data: form.serialize(),
            dataType: 'json',
            success: function(response) {
                if (response.success) {
                    form.replaceWith('<button class="btn-card btn-card-full btn-card-secondary" disabled><i class="bi bi-bookmark-check"></i> In Wishlist</button>');
                    showToast(response.message || 'Added to wishlist!', 'success');
                } else {
                    showToast(response.message || 'Failed.', 'error');
                    btn.prop('disabled', false).html('<i class="bi bi-plus-circle"></i> Add to Wishlist');
                }
            },
            error: function() {
                showToast('Failed. Please try again.', 'error');
                btn.prop('disabled', false).html('<i class="bi bi-plus-circle"></i> Add to Wishlist');
            }
        });
    });
});
</script>
}

