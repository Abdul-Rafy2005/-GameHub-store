@model GameHub.Controllers.SalesSummaryViewModel
@{
    ViewBag.Title = "Sales Summary";
}
<div class="page-header">
    <h2>Sales Summary</h2>
</div>

<div class="panel panel-default">
    <div class="panel-heading">Filters</div>
    <div class="panel-body">
        @using (Html.BeginForm("SalesSummary", "Reports", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group" style="margin-right:10px;">
                <label>From</label>
                <input type="date" name="from" class="form-control" value="@Model.From.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group" style="margin-right:10px;">
                <label>To</label>
                <input type="date" name="to" class="form-control" value="@Model.To.ToString("yyyy-MM-dd")" />
            </div>
            <button type="submit" class="btn btn-primary">Apply</button>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">Total Sales</div>
            <div class="panel-body">
                <h3>$@Model.TotalSales</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">Transactions</div>
            <div class="panel-body">
                <h3>@Model.TotalTransactions</h3>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Game</th>
                <th>Qty</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Label</td>
                <td>@item.Quantity</td>
                <td>$@item.Amount</td>
            </tr>
        }
        </tbody>
    </table>
</div>
