@{
    ViewBag.Title = "Admin Dashboard";
    var topGames = ViewBag.TopGames as IEnumerable<GameHub.Controllers.AdminController.TopGameViewModel> ?? Enumerable.Empty<GameHub.Controllers.AdminController.TopGameViewModel>();
    var recentTransactions = ViewBag.RecentTransactions as IEnumerable<GameHub.Models.Transaction> ?? Enumerable.Empty<GameHub.Models.Transaction>();
}

<div class="hero-banner" style="background-image:url('/Content/hero-placeholder.jpg')">
  <div class="overlay">
    <h1 class="display-5"><i class="bi bi-speedometer2"></i> Admin Dashboard</h1>
    <p class="lead">Platform overview and quick actions</p>
  </div>
</div>

<!-- Key Metrics -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="panel-dark text-center stat-card">
            <i class="bi bi-controller fs-1 text-info"></i>
            <h3 class="mt-2 mb-0">@ViewBag.TotalGames</h3>
            <p class="text-muted small">Total Games</p>
            <a href="@Url.Action("Index","Games")" class="btn btn-sm btn-accent">Manage</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel-dark text-center stat-card">
            <i class="bi bi-people fs-1 text-success"></i>
            <h3 class="mt-2 mb-0">@ViewBag.TotalUsers</h3>
            <p class="text-muted small">Active Users</p>
            <a href="@Url.Action("Index","Users")" class="btn btn-sm btn-accent">View</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel-dark text-center stat-card">
            <i class="bi bi-receipt fs-1 text-warning"></i>
            <h3 class="mt-2 mb-0">@ViewBag.TotalTransactions</h3>
            <p class="text-muted small">Total Sales</p>
            <a href="@Url.Action("Index","Transactions")" class="btn btn-sm btn-accent">Details</a>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel-dark text-center stat-card">
            <i class="bi bi-currency-dollar fs-1 text-primary"></i>
            <h3 class="mt-2 mb-0">$@ViewBag.TotalRevenue.ToString("N2")</h3>
            <p class="text-muted small">Total Revenue</p>
            <a href="@Url.Action("SalesSummary","Reports")" class="btn btn-sm btn-accent">Reports</a>
        </div>
    </div>
</div>

<!-- Today & Month Stats -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="panel-dark">
            <h5 class="mb-3"><i class="bi bi-calendar-day"></i> Today's Performance</h5>
            <div class="row">
                <div class="col-6 text-center">
                    <h4 class="text-success">@ViewBag.TodayTransactions</h4>
                    <p class="text-muted small mb-0">Transactions</p>
                </div>
                <div class="col-6 text-center">
                    <h4 class="text-success">$@ViewBag.TodayRevenue.ToString("N2")</h4>
                    <p class="text-muted small mb-0">Revenue</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel-dark">
            <h5 class="mb-3"><i class="bi bi-calendar-month"></i> This Month</h5>
            <div class="row">
                <div class="col-6 text-center">
                    <h4 class="text-info">@ViewBag.MonthTransactions</h4>
                    <p class="text-muted small mb-0">Transactions</p>
                </div>
                <div class="col-6 text-center">
                    <h4 class="text-info">$@ViewBag.MonthRevenue.ToString("N2")</h4>
                    <p class="text-muted small mb-0">Revenue</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Selling Games -->
<div class="panel-dark mb-4">
    <h5 class="mb-3"><i class="bi bi-trophy"></i> Top Selling Games</h5>
    @if (topGames.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Game</th>
                        <th class="text-center">Sales</th>
                        <th class="text-end">Revenue</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    int rank = 1;
                    foreach (var item in topGames)
                    {
                        <tr>
                            <td><span class="badge bg-warning text-dark">#@rank</span></td>
                            <td><strong>@item.GameTitle</strong></td>
                            <td class="text-center"><span class="badge bg-success">@item.Sales</span></td>
                            <td class="text-end text-success fw-bold">$@item.Revenue.ToString("N2")</td>
                        </tr>
                        rank++;
                    }
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted text-center py-3">No sales data yet</p>
    }
</div>

<!-- Recent Transactions -->
<div class="panel-dark mb-4">
    <h5 class="mb-3"><i class="bi bi-clock-history"></i> Recent Transactions</h5>
    @if (recentTransactions.Any())
    {
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Game</th>
                        <th>Payment</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in recentTransactions)
                {
                    <tr>
                        <td><small>@(t.PurchaseDate?.ToString("MMM dd, HH:mm") ?? "N/A")</small></td>
                        <td>@t.User.FullName</td>
                        <td><strong>@t.Game.Title</strong></td>
                        <td><span class="badge badge-soft">@t.PaymentMethod</span></td>
                        <td class="text-end text-success">$@t.PriceAtPurchase.ToString("N2")</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="text-center mt-3">
            <a href="@Url.Action("Index","Transactions")" class="btn btn-secondary">View All Transactions</a>
        </div>
    }
    else
    {
        <p class="text-muted text-center py-3">No transactions yet</p>
    }
</div>

<!-- Quick Actions -->
<div class="row g-3">
    <div class="col-md-4">
        <div class="panel-dark">
            <h6 class="mb-3"><i class="bi bi-controller"></i> Game Management</h6>
            <a href="@Url.Action("Index","Games")" class="btn btn-accent mb-2 w-100">View All Games</a>
            <a href="@Url.Action("Create","Games")" class="btn btn-success w-100">Add New Game</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel-dark">
            <h6 class="mb-3"><i class="bi bi-graph-up"></i> Reports</h6>
            <a href="@Url.Action("SalesSummary","Reports")" class="btn btn-accent mb-2 w-100">Sales Summary</a>
            <a href="@Url.Action("ActivityLogs","Reports")" class="btn btn-secondary w-100">Activity Logs</a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel-dark">
            <h6 class="mb-3"><i class="bi bi-hdd"></i> System</h6>
            <a href="@Url.Action("Index","BackupLogs")" class="btn btn-accent mb-2 w-100">Backups</a>
            <a href="@Url.Action("Index","Discounts")" class="btn btn-secondary w-100">Discounts</a>
        </div>
    </div>
</div>

@section Styles {
<style>
.stat-card {
    transition: all 0.3s ease;
}
.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 24px rgba(102,192,244,0.3);
}
</style>
}